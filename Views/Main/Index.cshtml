@model List<Trail>
<!-- Insert Model Here -->
<div class="row justify-content-center">
    <div class="col-lg-10 border border-white rounded justify-content-center m-4 bg-light">
        <div class="row justify-content-center m-3">
            <h1 class="text-center">Lost in the Woods</h1>
        </div>
        <div class="row justify-content-center m-3">
            <h3 class="text-center">List of Local Hiking Trails</h3>
        </div>
        <div class="row justify-content-center m-3">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" style="width: 50%;"><a href="/" class="text-white">Trail Name</th>
                        <th scope="col" style="width: 20%;"><a href="/Length" class="text-white">Total Length</a></th>
                        <th scope="col" style="width: 30%"><a href="/Elevation" class="text-white">Elevation Change</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var trail in @Model)
                        {
                        <tr>
                            <td><a href="/trails/@trail.trail_id">@trail.Name</a></td>
                            <td>@trail.Length Miles</td>
                            <td>@trail.Elevation Feet</td>
                        </tr>
                        }
                </tbody>
            </table>
        </div>
        <div class="row justify-content-end mb-2">
            <div class="col-lg-5 text-center">
                <a href="/NewTrail" class="btn btn-success pl-4 pr-4 mb-2">Add a new Trail</a>
            </div>
        </div>
    </div>
</div>